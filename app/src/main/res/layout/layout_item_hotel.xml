<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/margin_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="4"
            android:scaleType="centerCrop"
            android:src="@drawable/aaa" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:padding="@dimen/margin_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hotel_name"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:text="asdasda"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textSize18"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_favorite"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="24dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_favorite_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_rating_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="aasdasda"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textSize16"
                    app:drawableEndCompat="@drawable/ic_star_rate" />

                <TextView
                    android:id="@+id/tv_rating_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="aasdasda"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textSize16" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="aasdasda"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textSize16" />

                <TextView
                    android:id="@+id/tv_bed_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="aasdasda"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textSize16" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="asdasda"
                    android:layout_margin="@dimen/margin_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textSize20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/txt_tax"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textSize12" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>